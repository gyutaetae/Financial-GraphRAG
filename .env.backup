# ============================================
# VIK AI Finance GraphRAG 환경 변수 설정
# ============================================

# --- 실행 모드 ---
# API: OpenAI API 사용 (권장)
# LOCAL: Ollama 로컬 모델 사용
RUN_MODE=API

# --- OpenAI API 설정 ---
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# --- Neo4j 데이터베이스 설정 ---
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password-here
NEO4J_AUTO_EXPORT=false

# --- GraphRAG 작업 디렉토리 ---
GRAPH_WORKING_DIR=/tmp/graph_storage_hybrid

# --- 개발 모드 (빠른 테스트용) ---
DEV_MODE=false
DEV_MODE_MAX_CHARS=5000

# --- MCP 서버 설정 ---
# Tavily Search API 키 (https://tavily.com/)
TAVILY_API_KEY=your-tavily-api-key-here

# MCP 설정 파일 경로
MCP_CONFIG_PATH=mcp-config.json

# MCP Lazy Load (필요할 때만 서버 시작)
MCP_LAZY_LOAD=true

# --- 웹 검색 설정 ---
WEB_SEARCH_MAX_RESULTS=5

# --- Router 설정 ---
ROUTER_MODEL=gpt-4o-mini
ROUTER_TEMPERATURE=0.0

# --- 도메인 스키마 설정 ---
# Event-Actor-Asset-Factor-Region 도메인 스키마 활성화
ENABLE_DOMAIN_SCHEMA=true

# 도메인 분류에 사용할 모델
DOMAIN_CLASSIFICATION_MODEL=gpt-4o-mini
